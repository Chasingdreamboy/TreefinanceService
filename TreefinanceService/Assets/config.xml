<?xml version='1.0' encoding='utf-8'?>
<widget id="com.treefinance.gfd" version="0.1.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <!--1 设置／获取本地持久化配置-->
    <feature name="AppConfig">
        <param name="ios-package" value="TBSConfigPlugin" />
    </feature>
     <!-- 2   对控制器进行操作，例如 push／pop等-->
    <feature name="Controller">
        <param name="ios-package" value="TBSControllerPlugin" />
    </feature>
    <!-- 3   设置navigationBar的相关属性-->
    <feature name="NavBar">
        <param name="ios-package" value="TBSNavBarPlugin" />
    </feature>
    <!--4    设置webview相关属性-->
    <feature name="WebView">
        <param name="ios-package" value="TBSWebViewPlugin" />
    </feature>
    <!--5    埋点操作-->
    <feature name="BusinessLog">
        <param name="ios-package" value="TBSBusinessPlugin" />
    </feature>
    <!--6    获取地理位置-->
    <feature name="Geolocation">
        <param name="ios-package" value="TBSLocationPlugin" />
    </feature>

    <!--7    打开网页，如邮箱-->
    <feature name="OpenWebView">
        <param name="ios-package" value="TBSHookPlugin" />
    </feature>
    <!--8  检测设备是否越狱-->
    <feature name="JailBreak">
        <param name="ios-package" value="TBSJailPlugin" />
    </feature>
    <!--9    参数加密-->
    <feature name = "Encrypt">
        <param name = "ios-package" value = "TBSEncryptPlugin" />
    </feature>
    <!--10    使用safari打开网页-->
    <feature name = "App">
        <param name = "ios-package" value = "TBSUrlPlugin" />
    </feature>

    <!--11 展示原生的加载信息-->
    <feature name="Progress">
        <param name="ios-package" value="TBSProgressPlugin" />
        <param name="onload" value="true" />
    </feature>
    <!--12 选择指定tabBar并进行操作-->
    <feature name="TabBar">
        <param name="ios-package" value="TBSTabbarPlugin" />
    </feature>
    <!--13 业务-->
    <feature name = "Spider">
        <param name = "ios-package" value = "TBSSpiderPlugin" />
    </feature>
    <!--14 业务-->
    <feature name = "SaveImage">
        <param name = "ios-package" value = "TBSImagePlugin" />
    </feature>
    
    <name>功夫贷</name>
    <description>
        功夫贷，一会儿“功夫”钱就到了
    </description>
    <author email="dashuadmin@treefinance.com.cn" href="https://www.treefinance.com.cn">
        杭州大树网络技术公司
    </author>
    <content src="home.html" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="gfdapp://*/*"/>
    <allow-intent href="gfdbridge://*/*"/>
    <allow-intent href="itms:*" />
    <allow-intent href="mqq:*" />
    <allow-intent href="mqqwpa:*" />
    <allow-intent href="itms-apps:*" />
    <allow-navigation href="https://" />
    <allow-navigation href="http://" />
</widget>
